#!/bin/bash
# vim:syntax=sh:ai:et:si:sts=4:sw=4
#
# config script for fbcp-ili9341
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

case "$1" in
    configure|reconfigure)
        db_input critical fbcp-ili9341/ishat || true
        db_go || true

        db_get fbcp-ili9341/ishat || true
        ishat="${RET}"
        
        case "${ishat,,}" in
            true)
                db_input critical fbcp-ili9341/hat || true
                db_go || true

            ;;
            false)
                db_input critical fbcp-ili9341/wired || true
                db_go || true
            ;;
            *)
                exit 1
            ;;
        esac

        db_input critical fbcp-ili9341/divisor || true
        db_go || true
        db_input high fbcp-ili9341/statistics || true
        db_go || true
        db_input high fbcp-ili9341/hdmi || true
        db_go || true
    ;;

    *)
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
